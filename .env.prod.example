# ============================================
# 生产环境配置模板
# ============================================
# 请复制此文件并修改敏感值
# 不要将真实密码提交到版本控制！
# ============================================

# 环境标识
APP_ENV=prod
APP_NAME=couple-agent
APP_PORT=8080
APP_LOG_LEVEL=warning
FRONTEND_PORT=3000

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=couple_agent
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=10

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# JWT 配置（生产环境务必修改！）
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_EXPIRE_MINUTES=60
JWT_ISSUER=couple-agent

# AI 配置
AI_DEEPSEEK_API_KEY=your_deepseek_api_key
AI_DEEPSEEK_BASE_URL=https://api.deepseek.com
AI_DEEPSEEK_MODEL_NAME=deepseek-chat

# OSS 配置
OSS_BUCKET=your-bucket
OSS_REGION=cn-hangzhou
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 功能开关
ENABLE_SSE_STREAMING=true
ENABLE_WEBSOCKET=true
